<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@drawable/image"
    tools:ignore="ExtraText"><![CDATA[



    app:layout_constraintTop_toBottomOf="@+id/appTitle" />





















    ]]>

    <TextView
        android:id="@+id/appTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SnapTask"
        android:textColor="@android:color/black"
        android:textSize="30dp"
        android:textStyle="bold"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="120dp"
        tools:layout_editor_absoluteY="121dp" />

    <TextView
        android:id="@+id/login_text"
        android:layout_width="375dp"
        android:layout_height="135dp"
        android:text="Welcome to SnapTask! Wishing you success in every project.Login as Freelancer OR Client to get started."
        android:textSize="18dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="4dp"
        tools:layout_editor_absoluteY="188dp" />

    <Button
        android:id="@+id/btn_login_freelancer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#AAB99A"

        android:drawablePadding="8dp"
        android:padding="12dp"

        android:text="Login as Freelancer"
        android:textColor="@color/black"
        android:textSize="20dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="350dp" />

    <ImageView
        android:layout_width="26dp"
        android:layout_height="30dp"
        android:src="@drawable/login_icon"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="52dp"
        tools:layout_editor_absoluteY="366dp" />

    <Button
        android:id="@+id/btn_login_client"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#AAB99A"

        android:drawablePadding="8dp"
        android:padding="12dp"

        android:text="Login as Client"
        android:textColor="@color/black"
        android:textSize="20dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="451dp" />

    <ImageView
        android:layout_width="26dp"
        android:layout_height="30dp"
        android:src="@drawable/login_icon"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="54dp"
        tools:layout_editor_absoluteY="467dp" />

    <EditText
        android:id="@+id/skip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColorHint="#CBC3E3"
        android:text="Skip"
        android:textSize="20dp"
        android:textColor="#A294F9"
        tools:layout_editor_absoluteX="5dp"
        tools:layout_editor_absoluteY="645dp"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>